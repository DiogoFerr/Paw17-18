extends layout
block content
    h2 Zona de Triagem  
    h3 Pacientes restantes: #{pacientes.length}
    table
        tr
            th NUS
            th Paciente
        each paciente in pacientes
            tr
                td #{paciente.NUS} 
                td
                    a(href="/triagem/perfilPaciente/" + paciente.NUS)  #{paciente.nome}
    button(id="pacientesAtendidos") Pacientes Atendidos
    button(id="logout") Logout
    script
      include ../utils/scripts/buttonsScripts.js